<% message = @message.persisted? ? @account.messages.build : @message %>

$("#new_message").replaceWith("<%= j render 'form', message: message %>");

<% if @message.persisted? %>
  $(".flash").remove();
  $("<div/>").addClass("alert alert-info flash").text("Message sent!").prependTo("body");
  $("html, body").animate({ scrollTop: 0 });
<% end %>
