<div class="jumbotron">
  <div class="container text-center">
    <% if @account.present? %>
      <h4>Your pin is:</h4>
      <h1><%= @account.pin %></h1>

      <button type="button" class="btn btn-primary js-notifications-btn" disabled>
        Enable notifications on this device
      </button>
    <% else %>
      <h1>Browser notifications example</h1>
      <br>

      <%= link_to "Generate account", accounts_path, method: :post, class: "btn btn-primary btn-lg" %>
      <%= link_to "Connect to account", new_connection_path, class: "btn btn-default btn-lg" %>
    <% end %>
  </div>
</div>

<% if @account.present? %>
  <div class="container">
    <h2>Connected devices</h2>

    <% if @account.devices.any? %>
      <ul>
        <% @account.devices.each do |device| %>
          <li>
            <%= device.ua_device.unknown? ? "Browser" : device.ua_device.name %>:
            <%= device.ua_name %> <%= device.ua_version %>
            on
            <%= device.ua_platform.name %> <%= device.ua_platform.version %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p>No devices connected yet</p>
    <% end %>
  </div>
<% end %>
