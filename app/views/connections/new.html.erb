<div class="container text-center">
  <h1>Connect to an account</h1>

  <div class="row">
    <div class="col-sm-4 col-sm-offset-4">
      <%= simple_form_for @account, url: connections_path do |f| %>
        <%= f.input :pin, label: "Account PIN", input_html: { class: "input-lg text-center", maxlength: 5 } %>

        <%= f.submit "Connect", class: "btn btn-primary btn-lg" %>
      <% end %>
    </div>
  </div>
</div>
